@model ImagePostingLikesEFData.Image
<main b-gx69rlccnc role="main" class="pb-3">

    <div class="row">
        <input type="hidden" id="image-id" value="@Model.Id" />
        <div class="col-md-10 offset-md-1 bg-light p-4 rounded shadow">
            <h1>@Model.Title</h1>
            <img src="/uploads/@Model.FileName" style="width: 900px;" />
            <br />
            <br />
            <button id="like-button" data-image-id="@Model.Id" class="btn btn-primary btn-lg">LIKE</button>
            Current Likes: <span id="likes-count">@Model.Likes</span>
        </div>
    </div>

</main>

@section Scripts{
    <script src="~/js/viewimage.js"></script>
}